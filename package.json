{
  "name": "@volgakurvar/pixi-filter-multi-color-replace",
  "version": "1.0.0",
  "description": "High-performance multi-color replace filter for PixiJS with optimized fragment shader",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "format:check": "prettier --check src/**/*.{ts,js,json}",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:visual": "jest __tests__/visual",
    "test:visual:debug": "DEBUG_MODE=1 jest __tests__/visual"
  },
  "keywords": [
    "pixi",
    "pixijs",
    "filter",
    "color-replace",
    "multi-color",
    "webgl",
    "gpu",
    "performance"
  ],
  "author": "volgakurvar",
  "license": "MIT",
  "peerDependencies": {
    "pixi.js": "^8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@pixi/jest-electron": "^26.1.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.2",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "babel-jest": "^28.1.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^28.1.3",
    "pixelmatch": "^7.1.0",
    "pixi.js": "^8.11.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.4.2",
    "rollup": "^4.28.1",
    "ts-jest": "^28.0.8",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  }
}
